{
  "manifest_version": 2

  ,"name": "Новости друзей ВК (ВКонтакте, VK, vk.com)"
  ,"description": "Фильтр репостов и групп в новостях ВК (ВКонтакте, VK, vk.com)"
  ,"short_name": "Фильтр репостов и групп ВК"
  ,"version": "0.57"
  ,"author": "Александр Судаков <cygakoB@gmail.com>"
  ,"icons": {
    "16":   "assets/icons/icon-16.png"
    ,"48":  "assets/icons/icon-48.png"
    ,"128": "assets/icons/icon-128.png"
  }
  ,"options_page": "assets/options.html"
  ,"permissions": ["storage"]

  ,"content_scripts": [
    {
      "matches": [
        "http://vk.com/*"
        ,"https://vk.com/*"
      ]
      ,"js": [
        "assets/js/jquery.min.js"
        ,"assets/filter.js"
      ]
      ,"run_at": "document_end"
    }
  ]
}
