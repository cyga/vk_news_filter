{
  "manifest_version": 2

  ,"name": "Новости только от друзей ВКонтакте"
  ,"description": "Это расширение позволяет фильтровать репосты и группы в новостях ВК (vk.com)"
  ,"short_name": "Фильтр репостов и групп ВКонтакте"
  ,"version": "0.1"
  ,"author": "Александр Судаков <cygakoB@gmail.com>"
  ,"icons": {
    "16":   "icon-16.png"
    ,"48":  "icon-48.png"
    ,"128": "icon-128.png"
  }

  ,"content_scripts": [
    {
      "matches": [
        "http://vk.com/*"
        ,"https://vk.com/*"
      ]
      ,"js": [
        "js/jquery.js"
        ,"js/filter.js"
      ]
      ,"run_at": "document_end"
    }
  ]
}
